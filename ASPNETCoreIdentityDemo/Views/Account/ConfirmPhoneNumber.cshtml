@model ASPNETCoreIdentityDemo.Models.ViewModels.ConfirmPhoneNumberViewModel
@{
    ViewData["Title"] = "ConfirmPhoneNumber";
}
@if (string.IsNullOrEmpty(Model.PhoneNumber))
{
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header alert alert-warning" role="alert">
                    You have no Phone Number linked with this account. Add one and verify it.
                </div>
                <div class="card-body">
                    <form asp-action="AddPhoneNumber" asp-controller="Account" method="post">
                        <div class="form-group">
                            <label for="phoneNumber">Phone Number:</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Phone Number</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header alert alert-warning" role="alert">
                    Confirm Phone Number
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SendPhoneVerificationCode" asp-controller="Account">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label for="phoneNumber">Add or Update Phone Number:</label>
                            <input asp-for="PhoneNumber" class="form-control" id="phoneNumber" required>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Confirm Phone Number</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

