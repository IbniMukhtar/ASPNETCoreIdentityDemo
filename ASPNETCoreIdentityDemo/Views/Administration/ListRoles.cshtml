@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService;
@model IEnumerable<ApplicationRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">Add New Role</a>

    <div class="row">
        @foreach (var role in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@role.Name</h3>
                        <h6 class="card-text">@role.Description</h6>
                    </div>
                    <div class="card-footer">
                        @if ((await authorizationService.AuthorizeAsync(User, "EditRolePolicy")).Succeeded)
                        {
                            <form asp-action="DeleteRole" asp-route-roleId="@role.Id" method="post">

                                <a asp-controller="Administration" asp-action="EditRole" asp-route-roleId="@role.Id" class="btn btn-primary">
                                    Edit
                                </a>

                                <span id="confirmDeleteSpan_@role.Id" style="display:none">
                                    <span>Are you sure you want to Delete?</span>
                                    <button type="submit" class="btn btn-danger">Yes</button>
                                    <a href="#" class="btn btn-primary" onclick="confirmDelete('@role.Id', false);return false;">No</a>
                                </span>

                                <span id="deleteSpan_@role.Id">
                                    <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id', true);return false;">Delete</a>
                                </span>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}

<script>
    function confirmDelete(uniqueId, isTrue) {

        var deleteSpan = 'deleteSpan_' + uniqueId;
        var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

        if (isTrue) {
            $('#' + deleteSpan).hide();
            $('#' + confirmDeleteSpan).show();
        } else {
            $('#' + deleteSpan).show();
            $('#' + confirmDeleteSpan).hide();
        }
        return false;
    }
</script>
