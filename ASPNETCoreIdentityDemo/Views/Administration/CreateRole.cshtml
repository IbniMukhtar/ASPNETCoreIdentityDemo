
@model ASPNETCoreIdentityDemo.Models.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Create New Role</h2>
                </div>
                <div class="card-body">

                    <form asp-action="CreateRole" method="post" class="mt-3">

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="RoleName" class="col-form-label">Role Name</label>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter role name">
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="col-form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter role description" rows="2"><</textarea>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Create Role</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>




